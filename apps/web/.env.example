# Database (PostgreSQL)
# Development: Local PostgreSQL
DATABASE_URL="postgresql://postgres:synchire@localhost:5432/synchire"
# Production: GCP Cloud SQL (SSL enforced automatically in production)
# DATABASE_URL="postgresql://user:password@/dbname?host=/cloudsql/project:region:instance"
USE_DATABASE=true

# Connection Pool Configuration (optional, defaults shown)
# DB_POOL_MAX=20
# DB_POOL_MIN=2

# Cloud Storage (GCP)
# Set to "true" to use GCP Cloud Storage, "false" for local file storage
USE_CLOUD_STORAGE=false
# GCP Project ID (required when USE_CLOUD_STORAGE=true)
GCP_PROJECT_ID=your-project-id
# GCS Bucket Name (single bucket with cv/ and jd/ prefixes)
GCS_BUCKET=synchire-uploads
# Service account credentials (in production, use Application Default Credentials)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Stream Video Configuration
NEXT_PUBLIC_STREAM_API_KEY=your_stream_api_key_here
STREAM_API_SECRET=your_stream_api_secret_here

# Python Agent API
AGENT_API_URL=http://localhost:8080

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here

# Demo User Configuration (deprecated - use Better Auth)
NEXT_PUBLIC_DEMO_USER_NAME=Demo Candidate
NEXT_PUBLIC_DEMO_USER_EMAIL=demo@synchire.com

# Better Auth Configuration
# Generate secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-min-32-chars
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# Google OAuth (optional)
# Create credentials at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Logo.dev API (for company logos)
# Get your API key at https://www.logo.dev/
NEXT_PUBLIC_LOGO_DEV_KEY=

# Sentry Configuration
# Enable/disable Sentry (set to "false" for localhost)
NEXT_PUBLIC_SENTRY_ENABLED=true
# DSN from your Sentry project settings
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/your-project-id
# Trace sample rate (0.0 to 1.0) - use lower values in production
SENTRY_TRACES_SAMPLE_RATE=1.0
# Replay sample rates (client-side only)
NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0
