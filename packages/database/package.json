{
  "name": "@sync-hire/database",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./client": {
      "import": "./src/client.ts",
      "types": "./src/client.ts"
    }
  },
  "scripts": {
    "dev": "tsc --watch --preserveWatchOutput",
    "build": "tsc",
    "db:generate": "prisma generate --no-hints",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:test": "tsx scripts/test-database.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "7.1.0",
    "@prisma/client": "7.1.0",
    "better-auth": "^1.4.7",
    "pg": "8.16.3"
  },
  "devDependencies": {
    "@types/pg": "8.16.0",
    "dotenv": "17.2.3",
    "prisma": "7.1.0",
    "prisma-json-types-generator": "^4.0.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  }
}
